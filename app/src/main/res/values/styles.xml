<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:windowBackground">@color/white</item>


        <!--  overrite default ripple effect color that is grey by default -->
        <item name="android:textColorHighlight">@color/colorAccent</item>

    </style>

    <style name="SplashStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/tuckar_app_icon</item>

    </style>

    <style name="ActivityCustomStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:fontFamily">@font/montserrat</item>

    </style>

    <style name="MyToolBarTheme" parent="Theme.AppCompat.Light">
        <!-- overflow menu three dots color and nav icon-->
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="NavigationDrawerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/logoRed</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/lightBlack</item>
    </style>
</resources>
