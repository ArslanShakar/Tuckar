<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityCustomStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/logoRed</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/lightBlack</item>

        <!-- checked radioButtons, rating bar, checked checkbox, edit text writing text color by default it is color accent now overwrite-->
        <item name="android:colorControlActivated">@color/logoRed</item>

    </style>

    <style name="MyToolBarTheme" parent="Theme.AppCompat.Light">
        <!-- overflow menu three dots color and nav icon color -->
        <item name="android:textColorSecondary">@android:color/black
        </item>
    </style>

    <style name="NavigationDrawerStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColor">@color/lightBlack</item>
        <item name="android:statusBarColor">@color/logoRed</item>
    </style>
</resources>